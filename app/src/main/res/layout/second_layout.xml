<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:gravity="center"
        android:orientation="vertical">
    <Button android:id="@+id/content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
        android:background="@drawable/topcorner"
            android:text="Button_Content"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_root">
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="load"
        android:background="@drawable/nocorner"
        android:text="加载图片到内存" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="load"
        android:background="@drawable/bottomcorner"
        android:text="加载图片到内存" />
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="load"
        android:background="@drawable/roundconnercubic"
            android:text="加载图片到内存" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="middle"
        android:background="@drawable/roundconnercubic"
        android:text="测试文案长度一二三四五六七八九十" />

    <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</LinearLayout>