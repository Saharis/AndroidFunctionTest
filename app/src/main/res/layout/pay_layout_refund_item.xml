<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <TextView
                android:id="@+id/refund_desc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                style="@style/text_14_666666"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:text="退款申请已受理"/>
        <TextView
                android:id="@+id/refund_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/text_13_858585"
                android:gravity="center|right"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/refund_desc"
                android:layout_alignBaseline="@id/refund_desc"
                android:text="1月4日 23:55 test Americanadada Americanadada Americanadada Americanadada"/>
        <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:id="@+id/empty"
                android:layout_below="@id/refund_note"
                android:layout_alignParentRight="true"/>

        <RelativeLayout
                android:id="@+id/icon_layout"
                android:layout_width="19dp"
                android:layout_height="25dp">
            <ImageView
                    android:id="@+id/refund_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pay_refund_ico_finish"/>
            <ImageView
                    android:id="@+id/line_top"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_above="@id/refund_icon"
                    android:src="@color/light_gray3"/>
            <ImageView
                    android:id="@+id/line_bottom"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/refund_icon"
                    android:src="@color/light_blue_9"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="19dp"
                android:layout_below="@id/icon_layout"
                android:gravity="center"
                android:layout_alignBottom="@id/empty"
                android:layout_height="100dp">
            <ImageView
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@color/light_blue_9"/>
        </RelativeLayout>
</RelativeLayout>