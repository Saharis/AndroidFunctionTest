<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:example="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <EditText
            android:id="@+id/test_keyboard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="测试键盘弹起"/>
    <EditText
            android:id="@+id/test_keyboard2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="测试键盘弹起2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_keybo"
            android:text="testKeyboard"/>
    <com.virgil.androidfunctiontest.widget.ExpandablePanel
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            example:handle_Expandable="@+id/expand"
            example:content_Expandable="@+id/value"
            example:collapsedHeight="50dip">
        <TextView
                android:id="@id/value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="50dip"
                android:text="sssssssss"
                />
        <Button
                android:id="@id/expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More" />
    </com.virgil.androidfunctiontest.widget.ExpandablePanel>
    <Button
            android:id="@+id/expand11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kkkklkkk" />
</LinearLayout>